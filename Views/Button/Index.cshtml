@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";  
}

<!DOCTYPE html>

<html>
<head>
    <title>Get Rates</title>
    <style>
        table.ratesTable {
            border-width: 1px;
            border-spacing: 2px;
            border-style: outset;
            border-color: gray;
            border-collapse: separate;
            background-color: white;
        }

            table.ratesTable td {
                border-width: 1px;
                padding: 1px;
                border-style: inset;
                border-color: gray;
                background-color: white;
                -moz-border-radius: 1;
            }
    </style>

    <script src="~/Scripts/jquery-1.8.2.js"" type="text/javascript"></script>
    <script src="~/Scripts/knockout-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        function ratesModel() {
            var self = this;
            self.records = ko.observableArray([]);
            $.getJSON("/Button/GetRates", function (data) {
                self.records(data);
            });
        }

        function GetRates() {
            ko.applyBindings(new ratesModel());
        }
</script>
</head>
<body>
    <div>
        <button onclick="GetRates()">Click me</button>
    </div>
    <br /><br />
    <table class="ratesTable">
       <thead>
           <tr>
                <th>Swift_code</th>
                <th>Swift_name</th>
                <th>Multiply</th>
                <th>Buy_cash</th>
                <th>Buy_tc</th>
                <th>Sell_cash</th>
                <th>Sell_tc</th>
                <th>CurrencyGuide</th>
                <th>Base_swift</th>
            </tr>
        </thead>
        <tbody data-bind= "foreach: records">
            <tr>
                <td data-bind="text: Swift_code"></td>
                <td data-bind="text: Swift_name"></td>
                <td data-bind="text: Multiply"></td>
                <td data-bind="text: Buy_cash"></td>
                <td data-bind="text: Buy_tc"></td>
                <td data-bind="text: Sell_cash"></td>
                <td data-bind="text: Sell_tc"></td>
                <td data-bind="text: CurrencyGuide"></td>
                <td data-bind="text: Base_swift"></td>
            </tr>
        </tbody>
    </table>
</body>
</html>
